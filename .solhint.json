{
    "extends": ["solhint:recommended"],
    "rules": {
      "prettier/prettier": "error",
      "avoid-throw": "off",
      "avoid-suicide": "error",
      "avoid-sha3": "error",
      "compiler-version": "off",
      "mark-callable-contracts": "off",
      "reason-string": ["error", { "maxLength": 64 }]
    },
    "plugins": ["prettier"]
  }
