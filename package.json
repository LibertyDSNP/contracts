{
  "name": "contracts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run hardhat:clean && npm run hardhat:compile",
    "hardhat": "hardhat",
    "hardhat:clean": "hardhat clean",
    "hardhat:compile": "hardhat compile",
    "hardhat:console": "hardhat console",
    "test": "NODE_ENV=test hardhat test",
    "deploy:testnet": "hardhat run ./scripts/deploy.ts --network testnet --verbose",
    "deploy:localhost": "hardhat run ./scripts/deploy.ts --network localhost --verbose",
    "docker:create": "docker build . -t liberty-blockchain-node && docker container create --env-file ./docker/.env -p 8549:8545 -p 8550:8546 -p 30305:30303 -p 30305:30303/udp --name liberty-chain-node liberty-blockchain-node:latest",
    "docker:start": "docker container start liberty-chain-node",
    "docker:stop": "docker container stop liberty-chain-node",
    "docker:rm": "(npm run docker:stop || true) && docker container rm liberty-chain-node",
    "docker:reset": "(npm run docker:rm || true) && npm run docker:create && npm run docker:start",
    "format": "prettier --write \"**/*.{sol,js,ts}\"",
    "lint:sol": "solhint contracts/**/*.sol",
    "lint:prettier": "prettier -c \"**/*.{sol,js,ts}\"",
    "lint": "solhint \"contracts/**/*.sol\" && prettier -c \"**/*.{sol,js,ts}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Liberty30/contracts.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Liberty30/contracts/issues"
  },
  "homepage": "https://github.com/Liberty30/contracts#readme",
  "devDependencies": {
    "@codechecks/client": "^0.1.10",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^6.0.5",
    "@typechain/hardhat": "^1.0.1",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.41",
    "chai": "^4.3.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.4",
    "hardhat": "^2.2.1",
    "hardhat-gas-reporter": "^1.0.4",
    "js-sha3": "^0.8.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.5",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "0.0.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@ethersproject/contracts": "^5.1.1"
  }
}
